# WordPress Headless API Environment Configuration
# Copy this file to .env and update with your actual values

# ======================
# PROJECT CONFIGURATION
# ======================
PROJECT_NAME=my-headless-wp
DOMAIN=localhost
# DOMAIN=api.yourdomain.com  # For production

# ======================
# DATABASE CONFIGURATION
# ======================
# Azure MySQL Database (recommended for production)
DB_HOST=your-mysql-server.mysql.database.azure.com
DB_USER=your-username
DB_PASSWORD=your-secure-password
DB_NAME=your-database-name

# Local MySQL Database (for development only)
# DB_HOST=mysql:3306
# DB_USER=wordpress
# DB_PASSWORD=password
# DB_NAME=wordpress
# MYSQL_ROOT_PASSWORD=rootpassword

# ======================
# WORDPRESS CONFIGURATION
# ======================
WP_PORT=8081
WORDPRESS_TABLE_PREFIX=wp_

# ======================
# API & AUTHENTICATION
# ======================
# JWT Secret Key - Generate a strong random string
JWT_SECRET_KEY=your-super-secret-jwt-key-here-make-it-long-and-random

# CORS Origins - Comma-separated list of allowed origins for your frontend apps
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# ======================
# SSL & SECURITY
# ======================
# Let's Encrypt configuration for production
LETSENCRYPT_EMAIL=your-email@domain.com

# Force HTTPS in production
FORCE_SSL_ADMIN=false  # Set to true for production

# ======================
# PERFORMANCE
# ======================
WP_MEMORY_LIMIT=512M
MAX_EXECUTION_TIME=300
UPLOAD_MAX_FILESIZE=128M
POST_MAX_SIZE=128M

# ======================
# DEVELOPMENT SETTINGS
# ======================
# Debug settings (disable in production)
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false
SCRIPT_DEBUG=false

# ======================
# CI/CD CONFIGURATION
# ======================
# GitHub repository for CI/CD
GITHUB_REPOSITORY=your-username/your-repo-name

# Deployment path on VPS
DEPLOY_PATH=/opt/wordpress-headless

# ======================
# BACKUP CONFIGURATION
# ======================
# Database backup settings
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ======================
# MONITORING
# ======================
# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=0.1

# Health check endpoints
HEALTH_CHECK_ENABLED=true
